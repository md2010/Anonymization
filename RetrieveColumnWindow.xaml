<Window x:Class="Anonyimization.RetrieveColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anonyimization"
        mc:Ignorable="d"
        Title="RetrieveColumnWindow" Height="450" Width="800">
    <Grid>

        <DataGrid  Name="dataGrid" Margin="280,10,10,98"/>
        <ComboBox ItemsSource="{Binding Attributes}" SelectedItem="{Binding SelectedAttribute}" HorizontalAlignment="Left" Margin="56,140,0,0" VerticalAlignment="Top" Width="142" Height="33"/>
        <Label Content="Odaberite atribut" HorizontalAlignment="Left" Margin="56,101,0,0" VerticalAlignment="Top" Width="142" FontSize="14"/>
        <Button Content="Primjeni" Name="btnApply" Click="btnApply_Click" HorizontalAlignment="Left" Margin="56,259,0,0" VerticalAlignment="Top" Width="105" Height="39"/>
        <Button Content="Spremi" Name="btnSave" Click="btnSave_Click" HorizontalAlignment="Left" Margin="615,370,0,0" VerticalAlignment="Top" Width="105" Height="39"/>

    </Grid>
</Window>
